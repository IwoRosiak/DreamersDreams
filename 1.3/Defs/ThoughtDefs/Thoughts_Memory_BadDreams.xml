<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- NEGATIVE DREAMS -->
<DreamersDream.DreamDef ParentName = "BaseDream">
  <defName>KillSomeoneDream</defName>
  <chance>5</chance>
  <nullifyingTraits>
    <li>Psychopath</li>
    <li>Bloodlust</li>
  </nullifyingTraits>
  <stages>
    <li>
      <label>Had a dream about killing</label>
      <description>I was killing... But I didn't want to...</description>
      <baseMoodEffect>-2</baseMoodEffect>
    </li>
  </stages>
</DreamersDream.DreamDef>

<DreamersDream.DreamDef ParentName = "BaseDream">
  <defName>KillSomeoneCloseDream</defName>
  <chance>4</chance>
  <nullifyingTraits>
    <li>Psychopath</li>
    <li>Bloodlust</li>
  </nullifyingTraits>
  <stages>
    <li>
      <label>Had a dream about killing someone close</label>
      <description>I killed a person close to me in my dream.</description>
      <baseMoodEffect>-3</baseMoodEffect>
    </li>
  </stages>
</DreamersDream.DreamDef>

<DreamersDream.DreamDef ParentName = "BaseDream">
  <defName>CannibalismDream</defName>
  <chance>4</chance>
  <nullifyingTraits>
    <li>Psychopath</li>
    <li>Bloodlust</li>
    <li>Cannibal</li>
  </nullifyingTraits>
  <stages>
    <li>
      <label>Had a dream about eating someone</label>
      <description>I was forced to eat someone in my dream. It was an awful experience...</description>
      <baseMoodEffect>-3</baseMoodEffect>
    </li>
  </stages>
  <sensitivities>
    <li>hungry</li>
    <li>malnourished</li>
  </sensitivities>
</DreamersDream.DreamDef>

