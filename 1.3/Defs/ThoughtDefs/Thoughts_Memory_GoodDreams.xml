<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- POSITIVE DREAMS -->
  <DreamersDream.DreamDef Abstract="True" Name="BaseDream">
    <showBubble>true</showBubble>
    <durationDays>0.8</durationDays>
    <stackLimit>1</stackLimit>
    <chance>40</chance>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream">
    <defName>WonderfulDream</defName>
    <chance>10000</chance>
    <stages>
      <li>
        <label>Had a wonderful dream</label>
        <description>I have dreamt about wonderful things that are hard to describe. I felt like a god!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>healthy</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>VeryGoodDream</defName>
    <chance>36</chance>
    <stages>
      <li>
        <label>Had a very pleasant dream</label>
        <description>I dreamt about my favourite food and people! It gives me hope.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>healthy</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>GoodDream</defName>
    <showBubble>true</showBubble>
    <durationDays>0.8</durationDays>
    <stackLimit>1</stackLimit>
    <chance>45</chance>
    <stages>
      <li>
        <label>Had a pleasant dream</label>
        <description>I dreamt about calm places and kind people.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>healthy</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>FlyingDream</defName>
    <chance>24</chance>
    <stages>
      <li>
        <label>Dreamt about flying</label>
        <description>I was flying in my dream dream! It was an amazing experience. I just wanted it to keep going...</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>healthy</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>HealingDream</defName>
    <chance>0</chance>
    <stages>
      <li>
        <label>Had a miraculus healing dream</label>
        <description>I dreamt that my wounds closed up and when I woke up I felt so much better!</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>ill</li>
      <li>ill</li>
      <li>injured</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>LucidDream</defName>
    <chance>3</chance>
    <stages>
      <li>
        <label>Had lucid dream</label>
        <description>I realised that I'm in the dream so I could do anything I want! If only I could do it more often...</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>healthy</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>ChildhoodGoodDream</defName>
    <chance>24</chance>
    <stages>
      <li>
        <label>Dreamt about childhood</label>
        <description>I was back in my childhood house! I've regained connection with some of my the best memories.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>ill</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>BeachDream</defName>
    <chance>15</chance>
    <stages>
      <li>
        <label>Dreamt about ocean beach</label>
        <description>Cold drinks and sand. Yep, I could stay there forever.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>hot</li>
      <li>goodTemp</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>EverestDream</defName>
    <chance>15</chance>
    <stages>
      <li>
        <label>Dreamt about snow mountain</label>
        <description>From the mountaintop I could see the whole world. All the cities and forests. It was so cold though and I could barely breathe, yet I felt calm. I sat down and enjoyed the view...</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>cold</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>HealthyDream</defName>
    <chance>10</chance>
    <stages>
      <li>
        <label>Dreamt about being healthy</label>
        <description>I could finally relax... No pain... No suffering.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
    <sensitivities>
      <li>injured</li>
      <li>injured</li>
      <li>injured</li>
      <li>injured</li>
    </sensitivities>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>GodlyArtDream</defName>
    <chance>0.8</chance>
    <stages>
      <li>
        <label>Dreamt about wonders</label>
        <description>First, there was light... Then the most beautiful thing my eyes ever saw appeared before me...</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
    <inspiration>Dream_Inspired_Creativity</inspiration>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>CharismaticSpeechDream</defName>
    <chance>0.8</chance>
    <stages>
      <li>
        <label>Dreamt about giving speech</label>
        <description>Everyone looked at me but I was not stressed. I started talking about ideals and principles of life and people listened to me with interest. Before the dream ended I received standing ovations!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
    <inspiration>Dream_Inspired_Trade</inspiration>
  </DreamersDream.DreamDef>

  <DreamersDream.DreamDef ParentName = "BaseDream" >
    <defName>WorkDream</defName>
    <chance>0.8</chance>
    <stages>
      <li>
        <label>Dreamt about doing good job</label>
        <description>I was tasked to build strange shapes which looked like a traingle from the side. I gathered immense amounts of stone and helped little people finish the yellow construction. The little humans were so happy with my work that they decided to place their kings there after death!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
    <inspiration>Dream_Frenzy_Work</inspiration>
  </DreamersDream.DreamDef>
</Defs>
