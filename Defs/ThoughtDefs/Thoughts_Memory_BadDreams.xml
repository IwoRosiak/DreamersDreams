<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- NEGATIVE DREAMS -->
<ThoughtDef Class= "DreamersDream.DD_ThoughtDef">
  <defName>KillSomeoneDream</defName>
  <showBubble>true</showBubble>
  <durationDays>0.8</durationDays>
  <stackLimit>1</stackLimit>
  <chance>5</chance>
  <nullifyingTraits>
    <li>Psychopath</li>
    <li>Bloodlust</li>
  </nullifyingTraits>
  <stages>
    <li>
      <label>Had a dream about killing</label>
      <description>I was killing... But I didn't want to...</description>
      <baseMoodEffect>-2</baseMoodEffect>
    </li>
  </stages>
</ThoughtDef>

